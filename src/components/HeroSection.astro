---
import Section from "./Section.astro";

const BASE_URL = import.meta.env.BASE_URL;
---

<Section
  title="Disfrute de Tesla"
  subtitle="Programe una prueba de conducción hoy mismo"
  color="white"
>
  <div slot="footer">
    <a
      href="#"
      class="text-white border-[3px] border-white bg-white/5 backdrop-blur-sm text-sm rounded font-medium px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
    >
      Prueba de conducción
    </a>
  </div>
  <video
    slot="background"
    class="object-center object-cover h-full w-full"
    autoplay
    muted
    loop
    src={`${BASE_URL}/public_video.webm`}></video>
</Section>
